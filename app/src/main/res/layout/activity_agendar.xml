<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FDF6F6"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/login_main_title_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:text="Datos"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@id/Sevicio_Et"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="-16dp" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/Sevicio_Et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="90dp"
        app:layout_constraintTop_toBottomOf="@+id/login_main_title_name"
        android:text="Servicio..."
        />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/estilista_Et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@+id/Sevicio_Et"
        android:text="Estilista..."
        />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/Fecha_Et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@+id/estilista_Et"
        android:text="Fecha..."
        android:inputType="date"
        android:clickable="true"
        android:focusable="false"
        />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/Hora_Et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@+id/Fecha_Et"
        android:text="Hora..."
        android:inputType="date"
        android:clickable="true"
        android:focusable="false"

        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/login_sign_in_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/Hora_Et"
        android:background="#FBDDDB"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="50dp"
        app:layout_constraintBottom_toTopOf="@+id/login_bottom_caption"
        android:text="Agendar"
        />


</androidx.constraintlayout.widget.ConstraintLayout>